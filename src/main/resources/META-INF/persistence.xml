<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
          https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="accommodiq">
        <description>Procedure Demo</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.accommodiq.domain.Guest</class>
        <class>com.example.accommodiq.domain.Host</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/accommodiq" />
            <property name="jakarta.persistence.jdbc.user" value="user" />
            <property name="jakarta.persistence.jdbc.password" value="user" />
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
